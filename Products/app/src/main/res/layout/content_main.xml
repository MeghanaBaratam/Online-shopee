<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.meghana.products.MainActivity"
    tools:showIn="@layout/activity_main">


    <Button
        android:id="@+id/btcustomers"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Customers"
        android:onClick="customers"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:layout_margin="10dp"
        android:textColor="#1085ec"
        />

    <Button
        android:onClick="products"
        android:id="@+id/btproducts"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="products"
        android:layout_below="@+id/btcustomers"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:layout_margin="10dp"
        android:textColor="#1085ec" />

    <Button
        android:onClick="orders"
        android:id="@+id/btorders"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="orders"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:layout_margin="10dp"
        android:textColor="#1085ec"
        android:layout_below="@+id/btproducts"/>



</RelativeLayout>
